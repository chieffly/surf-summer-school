<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:indeterminateTint="@color/colorAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DashProgressBar" android:layout_gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewR" android:layout_gravity="center"
                android:textColor="@color/colorGray" android:textSize="16sp" android:textAlignment="center"/>
    </FrameLayout>
</LinearLayout>